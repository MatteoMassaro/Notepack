<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createNoteFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.notepack.NotepackFragment">

    <TextView
        android:id="@+id/createNotepack"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/robotoslab_extrabold"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/my_notepacks"
        android:textSize="30sp" />

    <ScrollView
        android:id="@+id/notepackScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:id="@+id/notepackLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:showDividers="middle"
            android:divider="@drawable/notepack_items_divider">

            <TextView
                android:id="@+id/addNotepackHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/add_notepack_hint"
                android:textSize="20sp"
                android:fontFamily="@font/robotoslab_variablefont_wght"
                android:textColor="@color/material_on_surface_disabled"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>