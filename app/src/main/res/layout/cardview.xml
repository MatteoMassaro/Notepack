<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="fill"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        android:backgroundTint="@color/pacific_blue"
        android:foreground="?android:attr/selectableItemBackground">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deleteNotepackBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/red"
            android:elevation="8dp"
            app:borderWidth="0dp"
            app:fabCustomSize="30dp"
            app:maxImageSize="20dp"
            app:srcCompat="@drawable/delete"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notepackImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="45dp"/>

            <TextView
                android:id="@+id/notepackTitle"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:maxHeight="80dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="@font/robotoslab_extrabold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/cardviewItemsTaken"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="11sp"
                android:fontFamily="@font/robotoslab_extrabold"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>