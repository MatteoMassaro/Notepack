<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notepack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pacific_blue</item>
        <item name="colorPrimaryVariant">@color/sky_blue_crayola</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:editTextColor">@color/pacific_blue_dark</item>
        <item name="android:textColorPrimary">@color/pacific_blue_dark</item>
        <item name="android:textColorSecondary">@color/pacific_blue_dark</item>
        <item name="android:textColorTertiary">@color/pacific_blue_dark</item>
        <item name="android:textColorPrimaryInverse">@color/light_black</item>
        <item name="android:textColorSecondaryInverse">@color/light_black</item>
        <item name="android:textColorTertiaryInverse">@color/light_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sky_blue_crayola</item>
        <item name="colorSecondaryVariant">@color/sky_blue_crayola</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Notepack.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Notepack.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Notepack.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>